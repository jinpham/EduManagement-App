<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/backdround_layout"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/sua_sv"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_avata_edit"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/avatamacdinh" />

        <Button
            android:id="@+id/btnReviewSuaSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border"
            android:text="@string/xem_anh"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <EditText
        android:id="@+id/edMaSvedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backdroung_edt"
        android:hint="@string/nhap_ma_sv"
        android:inputType="textVisiblePassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey2" />

    <EditText
        android:id="@+id/edTenSvedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backdroung_edt"
        android:hint="@string/nhap_ten_sv"
        android:inputType="textVisiblePassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey2" />

    <EditText
        android:id="@+id/edemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backdroung_edt"
        android:hint="@string/nhap_email"
        android:inputType="textVisiblePassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey2" />

    <EditText
        android:id="@+id/edhinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/backdroung_edt"
        android:hint="@string/nhap_ten_hinh"
        android:inputType="textVisiblePassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey2" />

    <Spinner
        android:id="@+id/spEdmalop"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnEdSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:text="@string/sua"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNhapLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:text="RESET"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnHuyeditSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:text="@string/huy"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>